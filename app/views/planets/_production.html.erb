    <div id="prod_conso_details">
        <div class="row">
            <div class="col-md-3">
                <%= image_tag("icons/energy.png", alt: "icone énérgie", :id => "energy_icon", :class => "icons resources_icons") %>
            </div>
            <div class="col-md-9">
