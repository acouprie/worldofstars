<% provide(:title, 'Connection') %>
<div class="container">
	<aside id="connexion" class="col-md-8">
		<h4>Connection</h4>

		<%= form_for(:session, url: login_path) do |f| %>
			<div class="row">
				<div class="col-md-3">
					<%= f.label :email, "Email ou pseudo" %>
				</div>
				<div class="col-md-6">
					<%= f.email_field :email, class: 'form-control' %>
				</div>
				<div class="col-md-3">	
					<%= f.submit "Connection", class: "btn btn-default" %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<%= f.label :password, "Mot de passe" %>
				</div>
				<div class="col-md-6">
					<%= f.password_field :password, class: 'form-control' %>
				</div>
				<div class="col-md-3">
					<div class="row">
						<div class="col-md-3">
						<%= f.check_box :remember_me %>
						</div>
						<div class="col-md-9">
					    <span id="remember_me">Se souvenir de moi</span>
					    </div>
					</div>
				</div>	
			</div>
			
		<% end %>
	</aside>
</div>