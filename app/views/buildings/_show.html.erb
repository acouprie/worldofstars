<h3>Batiments :</h3><br />
<% @planet.buildings.each do |building| %>
    <div>
      <%= building.name %> niveau <%= building.lvl %><br />
      <div>
        Nourriture : <%= building.food_price %> -
        Metal : <%= building.metal_price %> -
        Thorium : <%= building.thorium_price %>
      </div>
      <div>
        Production : <%= building.production %> -
        Conso. électricité : <%= building.conso_power %>
      </div>
      <div>
        Temps de construction : <%= building.time_to_build %> secondes
      </div>
      <%= button_to "Améliorer #{building.name}", building_upgrade_path(id: building.id), method: :post %><br />
    </div>
<% end %>

